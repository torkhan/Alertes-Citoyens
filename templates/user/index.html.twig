{% extends 'base.html.twig' %}

{% block title %}liste des utilisateurs{% endblock %}

{% block body %}
    <h1>Liste des utilisateurs</h1>

    <table class="table">
        <thead>
            <tr>

                <th>Email</th>
                <th>Role</th>

                <th>Statut</th>

                <th>Créé le</th>
                <th>Nom de l'utilisateur</th>
                <th>Prenom de l'utilisateur</th>
                <th>Date de modification</th>
                <th>Commentaire</th>
                {#<th>Service</th>#}
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>

                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>

                <td>{{ user.statut ? 'Yes' : 'No' }}</td>

                <td>{{ user.createAt ? user.createAt|date('d-m-Y H:i:s') : '' }}</td>
                <td>{{ user.nomUtilisateur }}</td>
                <td>{{ user.prenomUtilisateur }}</td>
                <td>{{ user.dateModificationUtilisateur ? user.dateModificationUtilisateur|date('d-m-Y H:i:s') : '' }}</td>
                <td>{{ user.commentaireUtilisateur }}</td>
                {#<td>{{ user.idService.nomService }}</td>#}
                <td>
                    <a class="btn btn-info" href="{{ path('user_show', {'id': user.id}) }}">Voir</a>
                    <a class="btn btn-warning" href="{{ path('user_edit', {'id': user.id}) }}">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('user_new') }}">Créer un nouvel utilisateur</a>
{% endblock %}
