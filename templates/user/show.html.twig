{% extends 'base.html.twig' %}

{% block title %}liste des utilisateurs{% endblock %}

{% block body %}
    <h1>Liste des utilisateurs</h1>

    <table class="table">
        <tbody>

            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Mot de passe</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ user.statut ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Login</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Créé le</th>
                <td>{{ user.createAt ? user.createAt|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Nom de l'utilisateur</th>
                <td>{{ user.nomUtilisateur }}</td>
            </tr>
            <tr>
                <th>Prenom de l'utilisateur</th>
                <td>{{ user.prenomUtilisateur }}</td>
            </tr>
            <tr>
                <th>Date de modification</th>
                <td>{{ user.dateModificationUtilisateur ? user.dateModificationUtilisateur|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Commentaire</th>
                <td>{{ user.commentaireUtilisateur }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('user_index') }}">Retour à la liste</a>

    <a class="btn btn-warning" href="{{ path('user_edit', {'id': user.id}) }}">Editer</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
