{% extends 'base.html.twig' %}

{% block title %}Liste des adresses{% endblock %}

{% block body %}
    <h1>Liste des adresses</h1>

    <table class="table">
        <thead>
            <tr>

                <th>Ville</th>
                <th>Cp</th>
                <th>Departement</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for adresse in adresses %}
            <tr>

                <td>{{ adresse.nomVille }}</td>
                <td>{{ adresse.cp }}</td>
                <td>{{ adresse.nomDepartement }}</td>
                <td>
                    <a class="btn btn-info" href="{{ path('adresse_show', {'id': adresse.id}) }}">Voir</a>
                    <a class="btn btn-warning" href="{{ path('adresse_edit', {'id': adresse.id}) }}">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('adresse_new') }}">Cr√©er une nouvelle adresse</a>
{% endblock %}
